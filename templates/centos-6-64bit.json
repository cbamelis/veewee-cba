{
  "description": "CBA CentOS 6 minimal packer",

  "variables": {
    "SUDO_USER": "veewee",
    "OUTPUT_NAME": "centos-6-64bit",
    "ISO_FILENAME": "CentOS-6.6-x86_64-minimal.iso",
    "ISO_MD5": "eb3c8be6ab668e6d83a118323a789e6c",
    "ISO_PREFIX_LOCAL": "iso/CentOS",
    "ISO_PREFIX_URL": "http://mirror.myip.be/pub/centos/6.6/isos/x86_64"
  },

  "builders": [
    {
      "type": "qemu",
      "boot_command": [
        "<tab> text cdrom <wait>",
        "ks=http://{{.HTTPIP}}:{{.HTTPPort}}/el6.cfg<wait>",
        "<enter><wait>"
      ],
      "boot_wait": "2s",
      "disk_size": 1048576,
      "http_directory": "kickstart",
      "iso_urls": [
         "{{user `ISO_PREFIX_LOCAL`}}/{{user `ISO_FILENAME`}}",
         "{{user `ISO_PREFIX_URL`}}/{{user `ISO_FILENAME`}}"
       ],
      "iso_checksum_type": "md5",
      "iso_checksum": "{{user `ISO_MD5`}}",
      "ssh_username": "{{user `SUDO_USER`}}",
      "ssh_password": "{{user `SUDO_USER`}}",
      "ssh_port": 22,
      "ssh_host_port_min": 2200,
      "ssh_host_port_max": 2209,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "sudo ./shutdown.sh {{user `SUDO_USER`}}",

      "headless": true,
      "accelerator": "kvm",
      "format": "qcow2",
      "disk_cache": "unsafe",
      "vm_name": "{{user `OUTPUT_NAME`}}-kvm",
      "qemuargs": [
        [ "-m", "512M" ]
      ]
    },
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text cdrom <wait>",
        "ks=http://{{.HTTPIP}}:{{.HTTPPort}}/el6.cfg<wait>",
        "<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 1048576,
      "http_directory": "kickstart",
      "iso_urls": [
         "{{user `ISO_PREFIX_LOCAL`}}/{{user `ISO_FILENAME`}}",
         "{{user `ISO_PREFIX_URL`}}/{{user `ISO_FILENAME`}}"
       ],
      "iso_checksum_type": "md5",
      "iso_checksum": "{{user `ISO_MD5`}}",
      "ssh_username": "{{user `SUDO_USER`}}",
      "ssh_password": "{{user `SUDO_USER`}}",
      "ssh_port": 22,
      "ssh_host_port_min": 2210,
      "ssh_host_port_max": 2219,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "sudo ./shutdown.sh {{user `SUDO_USER`}}",

      "guest_os_type": "RedHat_64",
      "guest_additions_mode": "upload",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "headless": true,
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ]
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "scripts/",
      "destination": "."
    },
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -E bash '{{.Path}}'",
      "inline": [
        "chmod a+x *.sh",
        "export PATH=.:${PATH}",
        "#vagrant.sh && cleanup.sh",
        "vagrant.sh && puppet.sh && virtualbox.sh && base.sh && cleanup.sh"
      ]
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "boxes/{{user `OUTPUT_NAME`}}-{{.Provider}}.box"
    }
  ]
}

